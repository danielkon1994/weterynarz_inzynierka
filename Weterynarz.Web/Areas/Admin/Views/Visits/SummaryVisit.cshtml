@namespace Weterynarz.Domain.ViewModels.SummaryVisit
@model SummaryVisitIndexViewModel
@{
    ViewData["Title"] = "Podsumowanie wizyty";
}

@section breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="@AreaNames.Admin">Strona główna</a></li>
        <li class="breadcrumb-item"><a asp-controller="Visits" asp-action="Index" asp-area="@AreaNames.Admin">Wizyty</a></li>
        <li class="breadcrumb-item active">Podsumowanie wizyty</li>
    </ol>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_visitDate</h5>
                    </div>
                    <p class="mb-1">@Model.VisitDate.ToString(FormatsDate.Date)</p>
                </a> 
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_owner</h5>
                    </div>
                    <p class="mb-1">@Model.Owner</p>
                </a> 
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_animal</h5>
                    </div>
                    <p class="mb-1">@Model.Animal</p>
                </a> 
                @if(Model.Diseases.Any())
                { 
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_diseases</h5>
                        </div>
                        <p class="mb-1">
                            <ul>
                                @foreach(var disease in Model.Diseases)
                                { 
                                    <li>@disease</li>
                                }
                            </ul>
                        </p>
                    </a>
                }
                @if (Model.MedicalExaminations.Any())
                {
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_medicalExaminations</h5>
                        </div>
                        <p class="mb-1">
                            <ul>
                                @foreach (var medicalExaminations in Model.MedicalExaminations)
                                {
                                    <li>@medicalExaminations</li>
                                }
                            </ul>
                        </p>
                    </a>
                }
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_drugs</h5>
                    </div>
                    <p class="mb-1">@Model.Drugs</p>
                </a> 
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@ResAdmin.visitSummaryIndexView_description</h5>
                    </div>
                    <p class="mb-1">@Model.Description</p>
                </a> 
            </div>            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        
        $(document).ready(function () {
            $('#DiseaseIds').select2();

            $('#MedicalExaminationIds').select2();
        });
    </script>
}