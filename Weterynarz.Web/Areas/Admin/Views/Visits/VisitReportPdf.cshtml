@namespace Weterynarz.Domain.ViewModels.Visit
@model IEnumerable<VisitReportViewModel>
@{
    ViewData["Title"] = "Zestawienie wizyt";
    Layout = null;
}

<html>
<head>
    <title>Zestawienie wizyt - PDF</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Zestawienie wizyt</h2>
                <br />
                <table class="table table-striped table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th>Właściciel</th>
                            <th>Zwierzę</th>
                            <th>Data wizyty</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Owner</td>
                                    <td>@item.Animal</td>
                                    <td>@item.VisitDate.ToString(FormatsDate.DateWithoutTime)</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="text-center">
                                <td colspan="6">@ResAdmin.list_emptyRecords</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</body>
</html>