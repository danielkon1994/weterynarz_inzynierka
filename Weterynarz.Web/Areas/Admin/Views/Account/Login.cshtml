@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Weterynarz.Domain.EntitiesDb
@model LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-5" id="loginForm">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="row">
                <div class="col-md-12 text-center" id="loginFormHeader">
                    <h3>Logowanie do systemu</h3>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input class="form-control" asp-for="UserName" type="text" placeholder="Nazwa użytkownika" required autofocus>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Hasło" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <input class="btn btn-primary btn-xl text-uppercase btn-block" type="submit" value="Zaloguj">
                </div>
                <div class="col-lg-12 text-center">
                    <a href="@Url.Action("Register", "Users", new { area = AreaNames.Admin})" class="btn btn-outline-warning btn-sm backBtn">Rejestracja</a>
                    <a href="@Url.Action("Index", "Home", new { area = AreaNames.None})" class="btn btn-outline-secondary btn-sm backBtn">Strona główna</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
