@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
    <a class="navbar-brand" href="index.html">WetWebsiteAdmin</a>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        
        @await Component.InvokeAsync("LeftNavbar")

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home", new { area = AreaNames.None })" class="nav-link">
                    <i class="fa fa-fw fa-home"></i>Przejdź do witryny
                </a>
            </li>
            @if(User.Identity.IsAuthenticated)
            { 
                <li class="nav-item">
                    <a href="@Url.Action("LogoutGet", "Account", new { area = AreaNames.Admin })" class="nav-link">
                        <i class="fa fa-fw fa-sign-out"></i>Wyloguj się
                    </a>
                </li>
            }
        </ul>
    </div>
</nav>