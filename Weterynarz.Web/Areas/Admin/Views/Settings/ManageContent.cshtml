@model Weterynarz.Domain.ViewModels.Settings.SettingsContentManageViewModel
@{
    ViewData["Title"] = "Edytuj treść";
}

@section breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="@AreaNames.Admin">Strona główna</a></li>
        <li class="breadcrumb-item"><a asp-controller="Settings" asp-action="Content" asp-area="@AreaNames.Admin">Treści strony głównej</a></li>
        <li class="breadcrumb-item active">Edytuj</li>
    </ol>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form asp-controller="Settings" asp-action="ManageContent" method="post">
                    <div class="card-header">
                        <strong>@ResAdmin.settingsContentEditView_headerForm</strong>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>

                        @Html.HiddenFor(m => m.Id)

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label asp-for="Value">@Model.Name</label>
                                    <input type="text" class="form-control" asp-for="Value" placeholder="Wprowadź wartość">
                                </div>
                            </div>
                        </div>
                        <!--/.row-->

                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Zapisz</button>
                        <a asp-controller="Settings" asp-action="Content" asp-area="@AreaNames.Admin" class="btn btn-sm btn-danger pull-right"><i class="fa fa-ban"></i> Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
