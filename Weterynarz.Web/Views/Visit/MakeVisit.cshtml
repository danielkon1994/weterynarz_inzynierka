
@{
    ViewData["Title"] = "Umów wizytę";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="makeVisit">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Umów wizytę</h2>
                <h3 class="section-subheading text-muted">Szybko i sprawnie umów się na wizytę do weterynarza</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="makeVisitForm" name="makeVisit" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="name" type="text" placeholder="Nazwa użytkownika" required data-validation-required-message="Podaj swoją nazwę użytkownika">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" type="email" placeholder="Adres email" required data-validation-required-message="Podaj swój adres email">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="phone" type="tel" placeholder="Numer telefonu" required data-validation-required-message="Podaj swój numer telefonu">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" id="message" placeholder="Wiadomość" required data-validation-required-message="Podaj wiadomość"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Wyślij</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>