@model HomeIndexViewModel
@{
    ViewData["Title"] = "Kontakt";
}

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">@HtmlExtensions.GetCacheContent(SettingsContentState.ContactTitle, Model.SiteContent)</h2>
                <h3 class="section-subheading text-muted">@HtmlExtensions.GetCacheContent(SettingsContentState.ContactSubTitle, Model.SiteContent)</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" asp-controller="Home"
                      asp-action="Contact" method="POST">
                    @*<form id="contactForm" name="sentMessage" asp-controller="Home"
            asp-action="Contact" data-ajax="true" data-ajax-method="POST"
            data-ajax-success="onSuccessAjaxContactForm"
            data-ajax-failure="onErrorAjaxContactForm">*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-for="ContactForm.UserName" class="form-control" type="text" placeholder="Nazwa użytkownika">
                                <span asp-validation-for="ContactForm.UserName" class="help-block text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ContactForm.Email" class="form-control" type="email" placeholder="Adres email">
                                <span asp-validation-for="ContactForm.Email" class="help-block text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ContactForm.Phone" class="form-control" type="tel" placeholder="Numer telefonu">
                                <span asp-validation-for="ContactForm.Phone" class="help-block text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea asp-for="ContactForm.Message" class="form-control" placeholder="Wiadomość"></textarea>
                                <span asp-validation-for="ContactForm.Message" class="help-block text-danger"></span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Wyślij</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
