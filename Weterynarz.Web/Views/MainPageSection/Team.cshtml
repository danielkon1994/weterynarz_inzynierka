@model HomeIndexViewModel
@{
    ViewData["Title"] = "Zespół";
}

<section id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">@HtmlExtensions.GetCacheContent(SettingsContentState.TeamTitle, Model.SiteContent)</h2>
                <h3 class="section-subheading text-muted">@HtmlExtensions.GetCacheContent(SettingsContentState.TeamSubTitle, Model.SiteContent)</h3>
            </div>
        </div>
        @if (Model.Doctors.Any())
        {
            foreach (var doctor in Model.Doctors)
            {
                <div class="row">
                    <div class="col-sm-4">
                        <div class="team-member">
                            <img class="mx-auto rounded-circle" src="~/images/team/img1.jpg" alt="">
                            <h4>@doctor.DisplayName</h4>
                            <p class="text-muted">@doctor.Specialization</p>
                            
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">Dzień</th>
                                        <th class="text-center">Godziny</th>
                                    </tr>
                                </thead>
                                @if (doctor.Graphic != null)
                                {
                                    <tbody>
                                        <tr>
                                            <td>Poniedziałek</td>
                                            <td>@doctor.Graphic.Monday</td>
                                        </tr>
                                        <tr>
                                            <td>Wtorek</td>
                                            <td>@doctor.Graphic.Tuesday</td>
                                        </tr>
                                        <tr>
                                            <td>Środa</td>
                                            <td>@doctor.Graphic.Wednesday</td>
                                        </tr>
                                        <tr>
                                            <td>Czwartek</td>
                                            <td>@doctor.Graphic.Thursday</td>
                                        </tr>
                                        <tr>
                                            <td>Piątek</td>
                                            <td>@doctor.Graphic.Friday</td>
                                        </tr>
                                        <tr>
                                            <td>Sobota</td>
                                            <td>@doctor.Graphic.Saturday</td>
                                        </tr>
                                        <tr>
                                            <td>Niedziela</td>
                                            <td>@doctor.Graphic.Sunday</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>